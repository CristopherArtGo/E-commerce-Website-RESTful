<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Page</title>
        <link rel="stylesheet" href="css/bootstrap/bootstrap.css" />
        <script defer src="js/bootstrap/bootstrap.js"></script>
        <script defer src="js/adminDashboard.js"></script>
    </head>
    <body class="min-h-100 py-3">
        <div class="container">
            <%- include('partials/adminHeader') %>
            <div class="row">
                <h4 class="col">Admin Dashboard</h4>
                <h4 class="col text-end"><a href="/products/new"> + Add Product</a></h4>
            </div>
            <div class="products">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col" colspan="">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </body>
</html>
