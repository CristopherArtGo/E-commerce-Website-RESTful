<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Page</title>
        <link rel="stylesheet" href="/css/bootstrap/bootstrap.css" />
        <script defer src="/js/bootstrap/bootstrap.js"></script>
        <script defer src="/js/adminDashboard.js"></script>
    </head>
    <body class="min-h-100 py-3">
        <div class="container">
            <%- include('partials/adminHeader') %>
            <div class="row">
                <h4 class="col">Admin Dashboard</h4>
                <h4 class="col text-end"><a href="/products/new"> + Add Product</a></h4>
            </div>
            <form action="" class="col-md-4">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </span>
                    <input type="text" class="form-control" placeholder="search product" id="search" name="search" />
                </div>
            </form>
            <div class="products">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col" colspan="">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </body>
</html>
