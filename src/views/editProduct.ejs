<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Product</title>
        <link rel="stylesheet" href="/css/bootstrap/bootstrap.css" />
        <script defer src="/js/bootstrap/bootstrap.js"></script>
        <script defer src="/js/editProduct.js"></script>
    </head>
    <body class="min-h-100 py-3">
        <div class="container">
            <%- include('partials/header') %>
            <h4>Edit Product #</h4>
            <div class="message"></div>
            <form action="" method="" class="col-md-4">
                <input type="hidden" name="id" id="id" name="id" />
                <label for="name" class="form-label">Product Name</label>
                <input type="text" id="name" class="form-control mb-3" name="name" />

                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" min="0" id="price" class="form-control" name="price" placeholder="0.00" />
                </div>

                <label for="category" class="form-label">Category</label>
                <select class="form-select mb-3" aria-label="Default select example" id="category" name="category">
                    <option selected disabled>Category</option>
                </select>

                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="floatingTextarea" name="description"></textarea>
                <button class="btn btn-primary my-3" type="submit">Update Product</button>
            </form>
        </div>
    </body>
</html>
